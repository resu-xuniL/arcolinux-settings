#/etc/pacman.d/hooks/orphans.hook

[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Orphaned package notification
When = PostTransaction
Exec = /usr/bin/bash -c 'printf "\e[32;1m%s\e[0m" "Orphaned packages -> "; pacman -Qtd || printf "\e[32;1m%s\e[0m" "  -> No orphans found !"'
