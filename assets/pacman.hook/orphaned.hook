#/etc/pacman.d/hooks/orphans.hook

[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Checking for orphaned package
When = PostTransaction
Exec = /usr/bin/bash -c 'if pacman -Qtd; then orphaned=$(pacman -Qtdq) && printf "\e[32m%s\e[0m\n" "Orphaned package(s) found : ${orphaned//[$\'\n\']/ | }."; else printf "\e[32m%s\e[0m\n" "None orphaned package found."; fi'
