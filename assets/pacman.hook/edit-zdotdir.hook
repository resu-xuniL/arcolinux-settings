#/etc/pacman.d/hooks/edit-zdotdir.hook

[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = oh-my-zsh-git

[Action]
Description = oh-my-zsh-git : change ZDOTDIR path
When = PostTransaction
Exec = /usr/bin/bash -c 'sudo sed -i "s/\${ZDOTDIR:-\$HOME}/\${ZDOTDIR:-\$HOME\/.config\/zsh}/" /usr/share/oh-my-zsh/oh-my-zsh.sh; printf "\e[32m%s%s\e[0m\n" "oh-my-zsh-git : " "ZDOTDIR path changed."'